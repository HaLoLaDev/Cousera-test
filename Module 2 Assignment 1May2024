}

/********** Large devices only **********/
@media (min-width: 992px)  {
   .col-lg-4 {
    float: left;
    width: 33.33%;
  }
}

/********** Medium devices only **********/
@media (min-width: 768px) and (max-width: 991px) {
   .col-md-6 {
    float: left;
    width: 50%;
    margin-left: auto;
    margin-right: auto;
   }
